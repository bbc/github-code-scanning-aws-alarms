{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["bin/**/*.ts", "lib/**/*.ts", "test/**/*.ts"]
}
